<h1>This is Todo-data-Component!</h1>
<LinkTo @route="/"><h1>Index Page!</h1></LinkTo>
<form {{on 'submit' handleAction}}>
  <input type="text" value={{todo}} {{on 'change' update}}>
  <button type="submit">Add</button>
</form>
{{#each @todos as |todo|}}
<h1 {{on 'click'  (fn deleteAction todo)}}>{{todo.title}}</h1>
{{/each}}